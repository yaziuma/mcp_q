# Use the latest 2.1 version of CircleCI pipeline process engine.
# See: https://circleci.com/docs/configuration-reference
version: 2.1

jobs:
  test:
    resource_class: small
    docker:
      - image: cimg/node:20.19
    steps:
      - checkout
      - restore_cache:
          keys:
            - v1-dependencies-{{ checksum "package-lock.json" }}
            - v1-dependencies-
      - run:
          name: Install dependencies
          command: npm install
      - save_cache:
          paths:
            - node_modules
          key: v1-dependencies-{{ checksum "package-lock.json" }}
      - run:
          name: Run tests
          command: |
            mkdir -p test-results
            npm test -- --testResultsProcessor=jest-junit
          environment:
            JEST_JUNIT_OUTPUT_DIR: test-results
            JEST_JUNIT_OUTPUT_NAME: results.xml
      - store_test_results:
          path: test-results
      - store_artifacts:
          path: test-results

  integration-test:
    resource_class: small
    docker:
      - image: cimg/node:20.19
    steps:
      - checkout
      - restore_cache:
          keys:
            - v1-dependencies-{{ checksum "package-lock.json" }}
            - v1-dependencies-
      - run:
          name: Install dependencies
          command: npm install
      - save_cache:
          paths:
            - node_modules
          key: v1-dependencies-{{ checksum "package-lock.json" }}
      - run:
          name: Start server in background
          command: npm start
          background: true
      - run:
          name: Wait for server
          command: sleep 5
      - run:
          name: Test home page
          command: curl -f http://localhost:3000
      - run:
          name: Test health check API
          command: curl -f http://localhost:3000/api/health
      - run:
          name: Test basic greeting API
          command: curl -f http://localhost:3000/api/greet
      - run:
          name: Test custom greeting API
          command: curl -f http://localhost:3000/api/greet/CircleCI

workflows:
  test-and-integration:
    jobs:
      - test
      - integration-test:
          requires:
            - test